#entity(data-id=id data-lat=lat data-lon=lon)
.card.border-primary.m-1
  .card-header
    .row
      .col
        h4 #{displayType}: #{name}
      if (admin)
        .col-2
          a(href='javascript:')#editEntityButton.float-end.ms-2
            i.fa-solid.fa-sm.fa-pen-to-square
          a(href='javascript:')#deleteEntityButton.float-end
            i.fa-solid.fa-sm.fa-trash
  .card-body
    if (type === "bands" || type === "musicians")
      if (link && link.indexOf('http') === 0)
        p Link:&nbsp;&nbsp;
          a(href=link, target="_blank") #{link}
      .card.border-secondary.mt-1
        .card-body
          .card-title Appears on Jams
            table.table#entityJamTable
    else if (type === "locations")
      if (link && link.indexOf('http') === 0)
        p Link:&nbsp;&nbsp;
          a(href=link, target="_blank") #{link}
      if (address)
        p Address: #{address}
      if (lat && lon)
        #map-canvas(style='width:100%; height:100px')
      .card.border-secondary.mt-1
        .card-body
          .card-title Appears on Jams
            table.table#entityJamTable
    else if (type === "staff")
      .card.border-secondary.mt-1
        .card-body
          .card-title Appears on Jams
            table.table#entityJamTable
