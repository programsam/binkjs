if (jam.musicians && jam.musicians.length > 0)
  .list-group
    for musician in jam.musicians
      li.list-group-item
        a(href=`javascript:loadEntity('musicians', ${musician.id});`) #{musician.name}
        |&nbsp;-&nbsp;
        each instrument, index in musician.instruments
          | #{instrument.name}&nbsp;
          a(href=`javascript:removeMusicianInstrument(${musician.id}, ${instrument.id})`)
            i.fa-solid.fa-trash
          if (index === (musician.instruments.length - 1))
            | &nbsp;
          else
            | ,&nbsp;
        p.float-end
          a(href=`javascript:removeEntireMusician(${musician.id})`)
            i.fa-solid.fa-user-minus
else
  em No musicians.
.row.mt-3
  .col
    h5 Add New Musician
    .row
      .col
        p Name:
        select#addmusician.form-control(name="addmusician", placeholder="Start typing a musician's name", autocomplete="off")
      .col
        p Instrument:
        select#addinstrument.form-control(name="addinstrument", placeholder="Select at least one instrument", autocomplete="off")
