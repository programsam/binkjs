doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, shrink-to-fit=no, initial-scale=1.0, maximum-scale=1.0, user-scalable=0')
    title BINK.js #{version}
    //jQuery
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js', integrity='sha512-3gJwYpMe3QewGELv8k/BX9vcqhryRdzRMxVfq6ngyWXwo03GFEzjsUm8Q7RZcHPHksttq7/GFoxjCVUjkjvPdw==', crossorigin='anonymous' referrerpolicy='no-referrer')

    //Bootstrap 5 uses the newer v2 of Popper, which conflicts with Bootstrap Table
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.8/umd/popper.min.js' integrity='sha512-TPh2Oxlg1zp+kz3nFA0C5vVC6leG/6mm1z9+mA81MI5eaUVqasPLO8Cuk4gMF4gUfP5etR73rgU/8PNMsSesoQ==' crossorigin='anonymous' referrerpolicy='no-referrer')

    //The bootstrap javascript library
    script(src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.min.js' integrity='sha512-3dZ9wIrMMij8rOH7X3kLfXAzwtcHpuYpEgQg1OA4QAob1e81H8ntUQmQm3pBudqIoySO5j0tHN4ENzA6+n2r4w==' crossorigin='anonymous' referrerpolicy='no-referrer')

    //Bootstrap DARKLY Theme -- should not need further customization!
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/5.3.0/darkly/bootstrap.min.css", integrity="sha512-3xynESL0QF3ERUl9se1VJk043nWT+UzWJveifBw7kLtC226vyGINZFtmyK015F83KBSNW+67alYSY2cCj1LHOQ==", crossorigin="anonymous" referrerpolicy='no-referrer')
    //FontAwesome Icons/Sprites usable with Bootstrap
    script(defer='' src='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js' integrity='sha512-fD9DI5bZwQxOi7MhYWnnNPlvXdp/2Pj3XSTRrFs5FQa4mizyGLnJcN6tuvUS6LbmgN1ut+XGSABKvjN0H6Aoow==' crossorigin='anonymous' referrerpolicy='no-referrer')
    //Howler.js import
    script(src='https://cdnjs.cloudflare.com/ajax/libs/howler/2.2.3/howler.min.js' integrity='sha512-6+YN/9o9BWrk6wSfGxQGpt3EUK6XeHi6yeHV+TYD2GR0Sj/cggRpXr1BrAQf0as6XslxomMUxXp2vIl+fv0QRA==' crossorigin='anonymous' referrerpolicy='no-referrer')
    // Custom CSS that BINK uses
    link(href='css/bink.css', rel='stylesheet')
    // The BINK Client-side JavaScript Application
    script(src='js/bink.js')
  body
    #scriptHolders
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
      .container-fluid
        a.navbar-brand(href='#') BINK v#{version}
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            li.nav-item
              a#recentButton.nav-link.active(aria-current='page' href='javascript:') Recent
            li.nav-item
              a#browseButton.nav-link(href='javascript:') Browse
            li.nav-item
              a#historyButton.nav-link(href='javascript:') History
            li.nav-item
              a#mapButton.nav-link(href='javascript:') Map
            li#adminItem.nav-item
              a#adminButton.nav-link(href='javascript:') Admin
    #main.main
    container-fluid.bg-primary.fixed-bottom.pt-2.pl-1
      .row
        .col-xl-7.col-lg-7.col-md-7.col-sm-7.col-7
          #playButton.btn.btn-primary(type=button)
            i.fa-solid.fa-play
          #pauseButton.btn.btn-primary.disabled(type=button)
            i.fa-solid.fa-pause
          #stopButton.btn.btn-primary(type=button)
            i.fa-solid.fa-stop
          #backwardButton.btn.btn-primary(type=button)
            i.fa-solid.fa-step-backward
          #forwardButton.btn.btn-primary(type=button)
            i.fa-solid.fa-step-forward
        .col-xl-2.col-lg-2.col-md-2.col-sm-2.col-5
          p#currentPosition.mt-2 0:00 / 0:00
        .col-xl-3.col-lg-3.col-md-3.col-sm-3.col-12
          p#currentlyPlaying.ml-3.mt-2
            em Nothing playing...
    #binkAlertModal.modal(tabindex='-1')
      .modal-dialog
        .modal-content
          .modal-header
            h5#binkAlertTitle.modal-title ...
            button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
          .modal-body
            p#binkAlertText ...
          .modal-footer
            button.btn.btn-secondary(type='button' data-bs-dismiss='modal') Close
