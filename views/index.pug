doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, shrink-to-fit=no, initial-scale=1.0, maximum-scale=1.0, user-scalable=0')
    title BINK.js #{version}
    //jQuery
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js', integrity='sha512-3gJwYpMe3QewGELv8k/BX9vcqhryRdzRMxVfq6ngyWXwo03GFEzjsUm8Q7RZcHPHksttq7/GFoxjCVUjkjvPdw==', crossorigin='anonymous' referrerpolicy='no-referrer')
    //Bootstrap 4 requires Popper for Modals
    //However, we are stuck on Popper v1.16 for Bootstrap Table; Popper v2.x doesn't work with Bootstrap Table
    script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js' integrity='sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN' crossorigin='anonymous' referrerpolicy='no-referrer')

    //The bootstrap javascript library
    script(src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.6.2/js/bootstrap.min.js' integrity='sha512-7rusk8kGPFynZWu26OKbTeI+QPoYchtxsmPeBqkHIEXJxeun4yJ4ISYe7C6sz9wdxeE1Gk3VxsIWgCZTc+vX3g==' crossorigin='anonymous' referrerpolicy='no-referrer')

    //Bootstrap DARKLY Theme -- should not need further customization!
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/4.6.2/darkly/bootstrap.min.css", integrity="sha512-nIedR8ngz58VrJKgdNSou8ny5bcqiIbZXA8YQPjK4whu6U6o8wGbP4pJSLBZfrEa77FA//cDy+1shdhy53QvBg==", crossorigin="anonymous" referrerpolicy='no-referrer')
    //FontAwesome Icons/Sprites usable with Bootstrap
    script(defer='' src='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js' integrity='sha512-Tn2m0TIpgVyTzzvmxLNuqbSJH3JP8jm+Cy3hvHrW7ndTDcJ1w5mBiksqDBb8GpE2ksktFvDB/ykZ0mDpsZj20w==' crossorigin='anonymous' referrerpolicy='no-referrer')
    //Howler.js import
    script(src='https://cdnjs.cloudflare.com/ajax/libs/howler/2.2.3/howler.min.js' integrity='sha512-6+YN/9o9BWrk6wSfGxQGpt3EUK6XeHi6yeHV+TYD2GR0Sj/cggRpXr1BrAQf0as6XslxomMUxXp2vIl+fv0QRA==' crossorigin='anonymous' referrerpolicy='no-referrer')
    // Custom CSS that BINK uses
    link(href='css/bink.css', rel='stylesheet')
    // The BINK Client-side JavaScript Application
    script(src='js/bink.js')
  body
    #scriptHolders
    nav.navbar.navbar-expand-lg.bg-primary.navbar-dark
      a.navbar-brand BINK v#{version}
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item
            a#recentButton(href="javascript:").active.nav-link
              | Recent
              span.sr-only (current)
          li.nav-item
            a#browseButton(href="javascript:").nav-link
              | Browse
          li.nav-item
            a#historyButton(href="javascript:").nav-link
              | History
          li.nav-item
            a#mapButton(href="javascript:").nav-link
              | Map
          li#adminItem.nav-item.dropdown
            a#adminButton(href="javascript:").nav-link
              | Admin

    #main.main
    container-fluid.bg-primary.fixed-bottom.pt-2.pl-1
      .row
        .col-xl-7.col-lg-7.col-md-7.col-sm-7.col-7
          #playButton.btn.btn-primary(type=button)
            i.fas.fa-play
          #pauseButton.btn.btn-primary.disabled(type=button)
            i.fas.fa-pause
          #stopButton.btn.btn-primary(type=button)
            i.fas.fa-stop
          #backwardButton.btn.btn-primary(type=button)
            i.fas.fa-step-backward
          #forwardButton.btn.btn-primary(type=button)
            i.fas.fa-step-forward
        .col-xl-2.col-lg-2.col-md-2.col-sm-2.col-5
          p#currentPosition.mt-2 0:00 / 0:00
        .col-xl-3.col-lg-3.col-md-3.col-sm-3.col-12
          p#currentlyPlaying.ml-3.mt-2
            em Nothing playing...
    #binkAlertModal.modal(tabindex='-1', role='dialog')
      .modal-dialog(role='document')
        .modal-content
          .modal-header
            h5#binkAlertTitle.modal-title ...
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') Ã—
          .modal-body
            p#binkAlertText ...
          .modal-footer
            button.btn.btn-secondary(type='button', data-dismiss='modal') Close
